%YAML 1.2
---
Application:
  license_key: <%= node[:newrelic][:license_key] %>
  poll_interval: 60

  apache_httpd:
    name: <%= node[:cloud][:hostname] %>
    scheme: http
    host: localhost
    port:
    path: /server-status

  memcached:
    name: memcached.private
    host: memcached.private
    port: 11211

  php_apc:
    name: <%= node[:cloud][:hostname] %>
    scheme: http
    host: localhost
    port:
    path: /apc-nrp.php

Daemon:
  user: root
  pidfile: /var/run/newrelic/newrelic_plugin_agent.pid

Logging:
  formatters:
    verbose:
      format: '%(levelname) -10s %(asctime)s %(process)-6d %(processName) -15s %(threadName)-10s %(name) -45s %(funcName) -25s L%(lineno)-6d: %(message)s'
  handlers:
    file:
      class : logging.handlers.RotatingFileHandler
      formatter: verbose
      filename: /var/log/newrelic/newrelic_plugin_agent.log
      maxBytes: 10485760
      backupCount: 3
  loggers:
    newrelic_plugin_agent:
      level: INFO
      propagate: True
      handlers: [console, file]
    requests:
      level: ERROR
      propagate: True
      handlers: [console, file]

