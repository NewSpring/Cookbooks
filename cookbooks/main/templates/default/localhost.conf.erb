<VirtualHost 127.0.0.1:80>
  ServerAdmin <%= node[:apache][:contact] %>
  DocumentRoot /var/localhost

  <Directory /var/localhost>
    AllowOverride None
    Allow from 127.0.0.1
    Deny from all
    Order Deny,Allow
  </Directory>

  <IfModule mod_status.c>
    <Location /server-status>
      SetHandler server-status
      Allow from 127.0.0.1
      Deny from all
      Order Deny,Allow
    </Location>
  </IfModule>
</VirtualHost>

