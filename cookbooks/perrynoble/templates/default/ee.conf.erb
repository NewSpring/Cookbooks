<VirtualHost *:80>
  ServerName <%= @site %>
  ServerAlias *.<%= @params['site'] %>
  DocumentRoot <%= @path %>
  RewriteEngine On
  
  <Directory <%= @params[:path] %>>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>
  
  <Directory />
    Options FollowSymLinks
    AllowOverride All
  </Directory>

  LogLevel info
  ErrorLog /var/log/apache2/<%= @application_name %>-error.log
  CustomLog /var/log/apache2/<%= @application_name %>-access.log combined

  RewriteEngine On
  RewriteLog /var/log/apache2/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0
</VirtualHost>

